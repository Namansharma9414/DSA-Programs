import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);

        int n  = scn.nextInt();
       
        int sp = n/2;
        int st = 1;

        for(int i = 1;i<=n; i++){
               
               if(i<=n/2){
                   for(int j =1;j<=sp;j++){
                       System.out.print("\t");
                   }
                   for(int j =1;j<=st;j++){
                       System.out.print("*\t");
                   }
                   sp--;
                  
                   st++;
                   st++;
                   System.out.println();
               }
               else{ for(int j =1;j<=sp;j++){
                       System.out.print("\t");
                   }
                   for(int j =1;j<=st;j++){
                       System.out.print("*\t");
                   }
                   sp++;
                  
                   st--;
                   st--;
                   System.out.println();
                   }
        }
    }
}
